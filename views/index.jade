extends layout

block content
  .row
    .col-lg-12
      h1.page-header News
    .col-lg-12
      .panel.panel-default
        .panel-heading
          | News List
        // /.panel-heading
        .panel-body
          form#search-form.form-group
            .form-group.input-group
              input#page-input.form-control(type='number', placeholder='Input Page')
              span.input-group-btn
                button.btn.btn-default(type='submit')
                  i.fa.fa-search
          .table-responsive
            table.table.table-striped#newstable
              thead
                tr
                  th #
                  th Title
                  th Description
                  th Author
                  th Publish
              tbody
          // /.table-responsive
        // /.panel-body
      // /.panel
